<TextInputPopup>:
    title: "New number of items"
    size_hint: None, None
    size: 300, 200
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        Label:
            opacity: 0
            size_hint_y: .2
            text: "Ensure you select on the id"
        TextInput:
            hint_text: "Click and enter number"
            input_filter: 'float'
            size_hint_y: .2
            id: txtinput
            text: ""
        Spinner:
            values: 'Available', 'Unavailable'
            id: spinnerinput
            size_hint_y: .2
            text: "Available"
            on_release:
        Button:
            size_hint_y: .2
            text: "Save Changes"
            on_release:
                root.obj.update_changes(txtinput.text, spinnerinput.text, root.obj_text)
                root.dismiss()
        Button:
            size_hint_y: .2
            text: "Dismiss"
            on_release: root.dismiss()


<SelectableButton>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size


